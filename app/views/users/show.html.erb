<%= provide(:title, @user.name) %>

<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<p class="user-name">
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p class="user-email">
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
