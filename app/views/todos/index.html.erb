<p id="notice"><%= notice %></p>

<h1>Todos</h1>
<p class = "todos-count">全タスク：<%= @todos.count %></p>
<p class = "todos-un-finish-count">未完了タスク：<%= @todos.where(checked_flg:false).count %></p>
<p class = "todos-finish-count">完了タスク：<%= @todos.where(checked_flg:true).count %></p>
<table>
  <thead>
    <tr>
      <th>+</th>
      <th>Title</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= check_box_tag 'checked_flg', todo.id, todo.checked_flg, {:checked_flg => todo.checked_flg} %></td>
        <td><%= todo.title %></td>
        <td><%= todo.memo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
