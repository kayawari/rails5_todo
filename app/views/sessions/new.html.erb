<% provide(:title, "Log in") %>

<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
<% end %>

<h1>ログイン画面</h1>
<%= form_for(:session, url:login_path) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %> 
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %> 
  </div>
  <div class="actions">
    <%= f.submit "Log in" %>
  </div>

  <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
<% end %>
