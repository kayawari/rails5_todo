<%= provide(:title, @user.name) %>

<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>
<p class="user-name">
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<p class="user-email">
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Todo', todos_path, class: 'button' %>
<%= link_to 'App Setting', user_path, class: 'button secondary' %>
<br>
<%= link_to 'Log out', logout_path, method: :delete, class: 'button alert' %>
